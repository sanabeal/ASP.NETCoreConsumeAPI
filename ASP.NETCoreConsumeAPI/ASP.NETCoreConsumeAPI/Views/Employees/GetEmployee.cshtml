@model ASP.NETCoreConsumeAPI.Models.Employees

@{
    ViewData["Title"] = "GetEmployee";
}

<h2>Get Employee by Id <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Employee</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>EmployeeId</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>DateOfBrith</th>
                <th>Gender</th>
                <th>DepartmentId</th>                
                <th>PhotoPath</th>                
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.EmployeeId</td>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td>@Model.Email</td>
                <td>@Model.DateOfBrith</td>
                <td>@Model.Gender</td>
                <td>@Model.DepartmentId</td>
                <td>@Model.PhotoPath</td>
            </tr>
        </tbody>
    </table>
}
